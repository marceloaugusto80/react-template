    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:9000",
            "port": 9222,  // launch chrome or setup shortcut to run with argument: --remote-debugging-port=9222
            "webRoot": "${workspaceFolder}/src",
            "outFiles": [
                "${workspaceFolder}/dist"
            ]
        },
        
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "url": "http://localhost:9000",
            "port": 9222, // launch chrome or setup shortcut to run with argument: --remote-debugging-port=9222
            "webRoot": "${workspaceFolder}/src",
            "outFiles": [
                "${workspaceFolder}/dist"
            ]
        }

    ]
}
